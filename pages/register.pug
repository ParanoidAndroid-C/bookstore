html
    head
    Title Register
    link(href='/stylesheets/login.css' rel='stylesheet')
    meta(charset="utf-8")

    body#main
        h1 Sign Up
        input#nameR(type='text' placeholder='Enter Your Username' required)
        br
        input#emailR(type='text' placeholder='Enter Your Email' required)
        br
        input#ageR(type='number' placeholder='Age' required min=6 max=99)
        br
        h4 pick your favourite genre:
        select#genreR(name='genre')
          each genre in genres
            option(value=genre) #{genre}
        br
        br
        input#passwordR(type='password' placeholder='Enter Your Password' required)
        br
        #addressForm
          h3 Address Information
          input(type="text" placeholder="Street Address" id="address" required) 
          input(type="text" placeholder="Apartment #" id="apt") 
          br
          input(type="text" placeholder="City" id="city" required) 
          input(type="text" placeholder="Country" id="country" required) 
          input(type="text" placeholder="Province" id="province")  
          input(type="text" placeholder="Postal Code" id="zipcode") 
          br
        button#signUpB(type='button' onclick='signUp()') Sign Up
        br
        p
        | already have an account? 
        a(href='/login') Log in here

script(src='/public/register.js')
